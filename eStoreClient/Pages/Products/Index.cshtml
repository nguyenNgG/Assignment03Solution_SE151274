@page
@model eStoreClient.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="lead">Search</div>
        <div class="d-flex flex-row">
            <input class="form-control" id="inpSearch" />
            <input type="submit" id="btnSearch" value="Search" class="mx-1 btn btn-primary" />
        </div>
        <div class="d-flex flex-column">
            <span class="lead my-1">Price From</span>
            <input type="number" id="inpFrom" class="form-control my-1" />
            <span class="lead my-1">To</span>
            <input type="number" id="inpTo" class="form-control my-1" />
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].UnitsInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/search.js" asp-append-version="true"></script>