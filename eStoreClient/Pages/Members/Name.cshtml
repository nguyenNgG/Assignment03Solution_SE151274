@page
@model eStoreClient.Pages.Members.NameModel
@{
}
<div class="form-group">
    <label asp-for="Member.Email"></label>
    <input asp-for="Member.Email" class="form-control" disabled />
</div>
<form method="post">
    <span class="text-danger">@Model.ErrorMessage</span>
    <div class="form-group">
        <label asp-for="Input.FirstName"></label>
        <input asp-for="Input.FirstName" class="form-control" value="@Model.Member.FirstName"/>
        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.LastName"></label>
        <input asp-for="Input.LastName" class="form-control" value="@Model.Member.LastName"/>
        <span asp-validation-for="Input.LastName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Change name</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}