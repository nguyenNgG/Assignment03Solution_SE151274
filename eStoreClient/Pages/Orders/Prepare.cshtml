@page
@model eStoreClient.Pages.Orders.PrepareModel
@{
    ViewData["Title"] = "Prepare a new Order";
}
<div class="card">
    <div class="card-header">
        Prepare Order
    </div>
    <div class="card-body">
        <div class="d-flex flex-column col-4 ">
            @*<a asp-page="/Members/Create" class="btn btn-outline-primary mb-2">Create new Member</a>*@
            <a asp-page="/Carts/Details" class="btn btn-primary">View Order Items</a>
        </div>
        <div class="d-flex flex-row-reverse">
            <div class="d-flex flex-column">
                <div class="font-weight-light">@Model.Message</div>
                <a asp-page="/Orders/Create" class="btn btn-primary mt-2 @Model.HasItems">Proceed to Create Order</a>
            </div>
        </div>
    </div>
</div>
